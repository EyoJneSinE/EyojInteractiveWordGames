<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/check_box_language_code_single_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_view_language_code_single_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language Code"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/check_box_language_code_single_choose"
        app:layout_constraintTop_toTopOf="@id/check_box_language_code_single_choose"
        app:layout_constraintBottom_toBottomOf="@id/check_box_language_code_single_choose"/>



</androidx.constraintlayout.widget.ConstraintLayout>